<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52b3cc"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnlLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_ava" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/fram_retangle_radius_white">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ..."
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="#d2d2d2"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/fram_retangle_radius_white">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Password ..."
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="#d2d2d2"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnIconHidePassword"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:background="@drawable/icon_hide_password"
                android:padding="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_pink"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:text="Đăng nhập"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnFogotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fogotPassword"
                android:textColor="#042b9c"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/register"
                android:textColor="#042b9c"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/frameLogin"
        android:layout_width="match_parent"
        android:background="#9ad1d1d1"
        android:layout_height="match_parent" />
    <ProgressBar
        android:id="@+id/prgBarLogin"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>